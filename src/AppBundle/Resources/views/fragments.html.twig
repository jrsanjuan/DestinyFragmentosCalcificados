{% extends 'base.html.twig' %}

{% block body %}

    <div class="jumbotron text-center fragments">
        <h2>{{ user }}</h2>
        <h1 id="form-title">{{ userFragments }}/50 Fragmentos Calcificados</h1>
        <div class="table-responsive">
            <table class="table table-hover" style="text-align: left;">
                <thead>
                <tr>
                    <td><strong>Fragmento</strong></td>
                    <td><strong>¿Lo tienes?</strong></td>
                    <td><strong>Localización</strong></td>
                    <td><strong>Actividad</strong></td>
                    <td><strong>Vídeo</strong></td>
                </tr>
                </thead>
                <tbody>
                {% for fragment in fragments %}
                <tr class={% if fragment in missingFragments %}"danger"{% endif %}>
                    <td>{{ data[fragment]['description'] }}</td>
                    <td>{% if fragment in missingFragments %} No {% else %} Sí {% endif %}</td>
                    <td>{{ data[fragment]['location'] }}</td>
                    <td>{{ data[fragment]['activity'] }}</td>
                    <td>
                        {% if data[fragment]['video'] != '' %}
                            <a target="_blank" href={{ data[fragment]['video'] }}>Video</a>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-lg-12">
            <p>
                Hecho por
                <a class="external-link" target="_blank" href="https://www.bungie.net/en/Profile/254/813899">lizardmamba</a> /
                <a class="external-link" target="_blank" href="http://www.jrsanjuan.com"> jrsanjuan</a>.
                <a class="external-link" target="_blank" href="https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=FJ72LKWRLF6JL">Donar</a>.
            </p>
        </div>
    </div>

{% endblock %}
